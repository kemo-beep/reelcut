# Server
PORT=8080
LOG_LEVEL=info
# Set DEBUG=1 or APP_ENV=development to include error details in 500 responses (e.g. register)
DEBUG=
APP_ENV=

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/reelcut?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=168h

# Object storage: MinIO (S3-compatible). All uploads use MinIO. docker-compose maps MinIO to 9002 (API) and 9003 (console).
# Create bucket "reelcut" in MinIO console (http://localhost:9003) if needed.
# If the backend runs in Docker but the browser must reach MinIO on the host, set S3_PUBLIC_ENDPOINT to the same URL.
S3_ENDPOINT=http://localhost:9002
S3_PUBLIC_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=reelcut
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_USE_PATH_STYLE=true

# Asynq (job queue)
ASYNQ_QUEUE=default
ASYNQ_CONCURRENCY=5

# OpenAI (Whisper transcription)
OPENAI_API_KEY=

# Stripe (subscriptions)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:5173

# Optional: set SEED_DEV=true to run seed migration (dev only)
SEED_DEV=
